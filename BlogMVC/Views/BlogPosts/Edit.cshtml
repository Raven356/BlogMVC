@model BlogMVC.BLL.Models.EditBlogPostDTO

@{
    ViewData["Title"] = "Edit";
    var authorId = @ViewData["AuthorId"];
    var categoryName = @ViewData["CategoryName"];
}

<h1>Edit</h1>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CreateViewModel.Id" />
            <div class="form-group">
                <label asp-for="CreateViewModel.Title" class="control-label"></label>
                <input asp-for="CreateViewModel.Title" class="form-control" />
                <span asp-validation-for="CreateViewModel.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateViewModel.Text" class="control-label"></label>
                <input asp-for="CreateViewModel.Text" class="form-control" />
                <span asp-validation-for="CreateViewModel.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateViewModel.CategoryName" class="control-label"></label>
                <input asp-for="CreateViewModel.CategoryName" class="form-control" value="@Model.CreateViewModel.CategoryName" />
            </div>
            <div class="form-group">
                <label asp-for="CreateViewModel.Date" class="control-label"></label>
                <input asp-for="CreateViewModel.Date" class="form-control" />
                <span asp-validation-for="CreateViewModel.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreateViewModel.Tags" class="control-label"></label>
                <input asp-for="CreateViewModel.Tags" class="form-control" value="@Model.CreateViewModel.Tags" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
